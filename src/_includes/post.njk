---
layout: "base.njk"
---
<script defer src="/scripts/readtime.js"></script>
<article>
   <h1>{{ title }}</h1>
   <label>Published: {{ date }} &bull; <p class="read-time" style="all: unset;"></p></label>
   {% if image %}
   <figure>
      <img src="{{ image }}" alt="{{ title }}"/>
      <figcaption>{{ caption }}</figcaption>
   </figure>
   {% endif %}
   <div>{{ content | safe }}</div>
</article>

<div class="postnav">
  {% set previousPost = collections.posts | getPreviousCollectionItem(page) %}
  {% set nextPost     = collections.posts | getNextCollectionItem(page) %}
  {% if previousPost %}
      <a class="button" href="{{ previousPost.url }}" title="{{ previousPost.data.title }}">&#x1F870; Older</a>
  {% endif %}
  {% if nextPost %}
      <a class="button" href="{{ nextPost.url }}" title="{{ nextPost.data.title }}">Newer &#x1F872;</a>
  {% endif %}
</div>